<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/bootstrap-5.1.3-dist/css/bootstrap.css">
    <script src="~/lib/bootstrap/bootstrap-5.1.3-dist/js/bootstrap.js"></script>
    @RenderSection("scripts", false)
    @RenderSection("style", false)
    <style>
        .footer {
            text-align: center;
            font-size: small;
            margin: 20px;
        }
    </style>
    <title>@ViewData["Title"]</title>
</head>
<body>
    <main class="container">
        <h1>@ViewData["Title"]</h1>
        @RenderBody()
    </main>
    <footer class="footer">
        <div class="container">
            <div><span class="text-muted">Viewing this application as: @(String.IsNullOrWhiteSpace(User?.Identity?.Name) ? "Anonymous" : User.Identity.Name) | Server: @(Environment.MachineName) | Running as: @(System.Security.Principal.WindowsIdentity.GetCurrent().Name)</span></div>
        </div>
    </footer>
</body>
</html>